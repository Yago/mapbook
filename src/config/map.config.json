{
  "styles": {
    "basemap": "https://maps.tilehosting.com/c/f8fe32e5-7af0-442c-818d-d5b64790bf6b/styles/outdoor-98f1c/style.json?key=2T3bgrAcefDwjt6X77dl",
    "swisstopo" : {
      "version": 8,
      "sources": {
        "swiss-topo": {
          "type": "raster",
          "tiles": [
            "https://wmts20.geo.admin.ch/1.0.0/ch.swisstopo.pixelkarte-farbe/default/current/3857/{z}/{x}/{y}.jpeg"
          ],
          "tileSize": 128
        },
        "swiss-pedestrian": {
          "type": "raster",
          "tiles": [
            "https://wmts20.geo.admin.ch/1.0.0/ch.swisstopo.swisstlm3d-wanderwege/default/current/3857/{z}/{x}/{y}.png"
          ],
          "tileSize": 128
        }
      },
      "layers": [
        {
          "id": "swiss-topo",
          "type": "raster",
          "source": "swiss-topo",
          "minzoom": 0,
          "maxzoom": 22
        },
        {
          "id": "swiss-pedestrian",
          "type": "raster",
          "source": "swiss-pedestrian",
          "minzoom": 10,
          "maxzoom": 22
        }
      ]
    },
    "satelite" : {
      "version": 8,
      "sources": {
        "swiss-pedestrian": {
          "type": "raster",
          "tiles": [
            "https://wmts20.geo.admin.ch/1.0.0/ch.swisstopo.swisstlm3d-wanderwege/default/current/3857/{z}/{x}/{y}.png"
          ],
          "tileSize": 128
        },
        "esri-imagery": {
          "type": "raster",
          "tiles": [
            "http://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}"
          ],
          "tileSize": 128
        }
      },
      "layers": [
        {
          "id": "esri-imagery",
          "type": "raster",
          "source": "esri-imagery",
          "minzoom": 0,
          "maxzoom": 17
        },
        {
          "id": "swiss-pedestrian",
          "type": "raster",
          "source": "swiss-pedestrian",
          "minzoom": 10,
          "maxzoom": 22
        }
      ]
    }
  },
  "clusters": {
    "id": "clusters",
    "filter": ["has", "point_count"],
    "type": "symbol",
    "source": "points",
    "layout": {
      "icon-image": "cluster-img",
      "icon-size": 0.35,
      "text-field": "{point_count_abbreviated}",
      "text-font": ["Open Sans Bold", "Arial Unicode MS Regular"],
      "text-size": 12
    },
    "paint": {
      "text-color": "#fff"
    }
  },
  "unclustered-points": {
    "id": "unclustered-points",
    "type": "symbol",
    "source": "points",
    "filter": ["!has", "point_count"],
    "layout": {
      "icon-image": "{marker}",
      "icon-size": 0.33,
      "icon-anchor": "bottom"
    }
  }
}